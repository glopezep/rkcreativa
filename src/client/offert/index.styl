.Offert
  position relative
  background white
  margin 0 auto
  &-link
    position absolute
    top 0
    bottom 0
    left 0
    right 0
    z-index: 2000
  &-image
    height 150px

  &-tag
    background #E31D87
    color white
    display inline-block
    padding .5em
    font-size 1.2em
    text-transform uppercase


  &-text
    font-size 2.2em
    color white
    margin .2em 0

  &-button
    font-size 1em
    padding 1em 1.5em
    display inline-block
    text-decoration none
    background #FFE596
    border-bottom 7px solid #CFBC7D
    border-radius 10px
    color black
    transition background .3s ease
    &:hover
      background #CFBC7D

  &-left, &-right
    display inline-block
    vertical-align middle

  &-left
    margin-right 1em

@media only screen and (max-width: 700px)
  .Offert
    margin 0 auto
