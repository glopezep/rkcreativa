.AppHeader-menu
  .Menu-list
    margin 0
    padding 0

  .Menu-item
    display inline-block

  .Menu-link
    color #3C3C3B
    display inline-block
    padding 3.4em .5em
    transition .4s
    border-top 5px solid transparent
    text-decoration none
    text-transform uppercase

    &:hover
      border-top 5px solid #E31D87
